<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Receitas Culinárias</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.min.css">
    <link id="style" rel="stylesheet" type="text/css" href="/css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/js/scripts.js"></script>
    <script type="text/javascript"
        src="https://cdn.jsdelivr.net/npm/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
</head>

<body {{#if customBackground}}class="custom-background" {{/if}}>
    <div id="content">
        <nav id="navbar" class="navInvisible">
            {{#if session.userid}}
            <div onclick="loading()">
                <a href="/recipes/dashboard" id="logo">
                    <img src="/img/book.png" alt="Book">
                </a>
            </div>
            {{else}}
            <div onclick="loading()">
                <a href="/" id="logo">
                    <img src="/img/book.png" alt="Book">
                </a>
            </div>
            {{/if}}
            <ul>
                {{#if session.userid}}
                <li onclick="loading()"><a href="/recipes/dashboard">Dashboard</a></li>
                <li onclick="loading()"><a href="/logout">Sair</a></li>
                {{else}}
                <li onclick="loading()"><a href="/login">Entrar</a></li>
                <li onclick="loading()"><a href="/register">Registrar</a></li>
                {{/if}}
            </ul>
        </nav>

        <button id="btnNav" onclick="hideNav()">
            <i class="bi bi-list"></i></button>

        <button id="btnRight" onclick="darkMode()">
            <i class="bi bi-lightbulb"></i></button>

        <main>
            {{#if messages.messageLog}}
            <div class="messageLog" id="msg">
                {{messages.messageLog}}
            </div>
            {{/if}}

            {{#if messages.messageOk}}
            <div class="messageOk" id="msg">
                {{messages.messageOk}}
            </div>
            {{/if}}

            {{#if messages.messageErr}}
            <div class="messageErr" id="msg">
                {{messages.messageErr}}
            </div>
            {{/if}}

            {{#if messages.messageDef}}
            <div class="messageDef" id="msg">
                {{messages.messageDef}}
            </div>
            {{/if}}

            {{{body}}}
        </main>

        <footer>
            <p><span>Receitas Culinárias</span> &copy; 2023</p>
        </footer>
    </div>

    <div id="loading">
        <div id="loading-container">
            <div class="lds-facebook">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2/dist/js/bootstrap.min.js"></script>
</body>

</html>